{
  "name": "ixrdemo",
  "version": "1.0.0",
  "description": "IXR Demo",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build:js": "browserify public/src/js/index.js -d -t babelify -o public/js/bundle.js",
    "build-task:scss-compile": "node-sass-chokidar --source-map true public/src/scss/styles.scss -o public/css",
    "build-task:autoprefixer": "postcss public/css/*.css --use autoprefixer -d public/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'public/src/scss/**/*.scss' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^7.2.4",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^15.0.0",
    "chokidar-cli": "^1.2.0",
    "jquery": "^3.2.1",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "watchify": "^3.9.0"
  }
}
